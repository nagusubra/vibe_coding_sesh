{
  "manifest_version": 3,
  "name": "Brainrot Radar",
  "version": "1.0.0",
  "description": "Instant AI verdict (valuable vs brainrot) for pages & outbound links using Perplexity Sonar.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
  "storage",
  "activeTab",
  "scripting",
  "tabs"
  ],
  "host_permissions": [
    "https://api.perplexity.ai/*",
    "https://media.giphy.com/*",
    "https://media.tenor.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Brainrot Radar"
  },
  "background": {
    "service_worker": "background.js"
  }
}